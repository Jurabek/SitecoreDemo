<script type="text/ng-template" id="pagination.template.html">
    <div class="text-md-center">
        <nav>
            <ul class="pagination">
                <li class="page-item" data-ng-show="currentPage > 1">
                    <a class="page-link" href="#" aria-label="First" data-ng-click="changePage({page: 1})">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">First</span>
                    </a>
                </li>
                <li class="page-item" data-ng-show="currentPage > 2">
                    <a class="page-link" href="#" aria-label="Previous" data-ng-click="changePage({page: (currentPage - 1)})">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li data-ng-show="hasPrevious" class="page-item"><a class="page-link" href="#" data-ng-click="changePage({page: (currentPage - 3)})">...</a></li>
                <li ng-cloak data-ng-repeat="number in count()" data-ng-class="isActive(number)" class="page-item"><a class="page-link" href="#" data-ng-click="changePage({page: number})">{{number}}</a></li>
                <li data-ng-show="hasNext" class="page-item"><a class="page-link" href="#" data-ng-click="changePage({page: (currentPage + 3)})">...</a></li>
                <li class="page-item" data-ng-show="currentPage < (pageCount - 2)">
                    <a class="page-link" href="#" aria-label="Next" ng-click="changePage({page: (currentPage + 1)})">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item" data-ng-show="currentPage < pageCount">
                    <a class="page-link" href="#" aria-label="Last" ng-click="changePage({page: pageCount})">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Last</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</script>
